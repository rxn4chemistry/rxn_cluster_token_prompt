import click
import pandas as pd
import json

@click.command()
@click.argument('input_file_path', type=click.Path(exists=True), required=True)
@click.option('--product/--precursors', required=True)
def main(input_file_path: str, product: str):

    with open(input_file_path) as f:
        products = [line.strip() for line in f]

    classes_map = {f"{i}": f"{i}" for i in range(0,12)}
    
    if product:
        class_token_molecules = [f"[{i}] {elem}" for elem in products for i in range(0,12)]
    else:
        class_token_molecules = [f"{elem}" for elem in products for i in range(0,12)]
    
    for elem in class_token_molecules:
        print(elem)

if __name__ == "__main__":
    main()
